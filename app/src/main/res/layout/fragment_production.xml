<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView8"
            android:layout_marginLeft="@dimen/list_cell_left_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButton1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_marginRight="@dimen/list_cell_right_margin"
            app:srcCompat="@drawable/zoom" />
    </LinearLayout>
    <zdalyapp.mayah.views.HorizontalListView
        android:id="@+id/colorlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </zdalyapp.mayah.views.HorizontalListView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_cell_left_margin"
        android:layout_marginRight="@dimen/list_cell_right_margin"
        android:scrollbars="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <zdalyapp.mayah.views.MCGraphView
                android:layout_width="wrap_content"
                android:id="@+id/graphView"
                android:layout_height="250dp"
                android:background="#fff"
                android:paddingBottom="20dp"
                android:paddingTop="70dp"
                android:paddingLeft="20dp"
                app:exampleColor="#33b5e5"
                app:exampleDimension="24sp"
                app:exampleDrawable="@android:drawable/ic_menu_add"
                app:exampleString="Hello, MCGraphView"/>
        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>
